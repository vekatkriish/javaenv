pipeline {
	
    agent {
	
        dockerfile {
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    
    stages {
	    
    	stage('deploy') {
            steps{

                sh echo 'Hello World'
               sh echo params.build_no
               sh echo params.env
               script{
                    if (params.skiptests) {
                        echo "true: $skiptests"
                    }
                    else echo "false: $skiptests"

                }
                
            }
	    }	
    }
}
